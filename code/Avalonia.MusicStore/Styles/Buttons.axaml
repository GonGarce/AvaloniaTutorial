<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
            <StackPanel Orientation="Horizontal">
                <Button Classes="icon">
                    <PathIcon Data="{StaticResource StoreMicrosoftRegular}" />
                </Button>
                <Button Classes="icon" IsEnabled="False">
                    <PathIcon Data="{StaticResource MusicRegular}" />
                </Button>
            </StackPanel>
        </Border>
    </Design.PreviewWith>

    <!-- Icon Button Styles -->
    <Style Selector="Button.icon">
        <Setter Property="Background" Value="Transparent"></Setter>
        <Setter Property="Width" Value="36" />
        <Setter Property="Height" Value="36" />
        <Style Selector="^ PathIcon">
            <Setter Property="Width" Value="24" />
            <Setter Property="Height" Value="24" />
        </Style>

        <!-- Disabled -->
        <Style Selector="^:disabled">
            <Style Selector="^ /template/ ContentPresenter">
                <Setter Property="Background" Value="Transparent" />
            </Style>
            <Style Selector="^ PathIcon">
                <Setter Property="Foreground" Value="LightSlateGray" />
            </Style>
        </Style>

        <!-- Hover -->
        <Style Selector="^:pointerover">
            <Style Selector="^ /template/ ContentPresenter">
                <Setter Property="Background" Value="Transparent" />
            </Style>
            <Style Selector="^ PathIcon">
                <Setter Property="Foreground" Value="{DynamicResource SystemAccentColor}" />
            </Style>
        </Style>

        <!-- Pressed -->
        <Style Selector="^:pressed">
            <Style Selector="^ /template/ ContentPresenter">
                <Setter Property="Background" Value="Transparent" />
            </Style>
            <Style Selector="^ PathIcon">
                <Setter Property="Foreground" Value="{DynamicResource SystemAccentColorDark1}" />
            </Style>
        </Style>

        <!-- Selected -->
        <Style Selector="^:selected">
            <Style Selector="^ /template/ ContentPresenter">
                <Setter Property="Background" Value="Transparent" />
            </Style>
            <Style Selector="^ PathIcon">
                <Setter Property="Foreground" Value="{DynamicResource SystemAccentColor}" />
            </Style>
        </Style>

        <!-- Focused -->
        <Style Selector="^:focused">
            <Style Selector="^ /template/ ContentPresenter">
                <Setter Property="Background" Value="Transparent" />
            </Style>
            <Style Selector="^ PathIcon">
                <Setter Property="Foreground" Value="{DynamicResource SystemAccentColor}" />
            </Style>
        </Style>
    </Style>
</Styles>